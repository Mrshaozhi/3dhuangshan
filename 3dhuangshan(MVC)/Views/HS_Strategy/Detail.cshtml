<script type="text/javascript">
    function GetQueryString(name) {
        var reg = new RegExp('(^|&)' + name + '=([^&]*)(&|$)', 'i');
        var r = window.location.search.substr(1).match(reg);
        if (r != null) {
            return unescape(r[2]);
        }
        return null;
    }
    $("#heart").click(function () {       
        if ($("#heart").attr("class") == "icon-heart-empty") {
            //CSS样式处理
            $("#heart").attr("class", "icon-heart");
            $("#num").text(parseInt($("#num").text()) + 1);

            //逻辑处理
            var sId = GetQueryString("id");
            $.ajax({
                type: "POST",
                url: '../HS_Strategy/StrategyBusiness',
                data: { judge: "third", sId: sId },
                dataType: 'text',
                error: function () {
                    alert("获取错误！");
                },
                success: function (data) {
                    if (data == "ok") {
                        $("#result").text("已收藏,可在主页查看");
                        $("#a").click();
                    }
                    if (data == "false") {
                        $("#result").text("已收藏");
                        $("#a").click();
                    }
                }
            });
        }
        else if ($("#heart").attr("class") == "icon-heart") {
            $("#heart").attr("class", "icon-heart-empty");
            $("#num").text(parseInt($("#num").text()) - 1);
            //逻辑处理
            var sId = GetQueryString("id");
            $.ajax({
                type: "POST",
                url: '../HS_Strategy/StrategyBusiness',
                data: { judge: "fourth", sId: sId },
                dataType: 'text',
                error: function () {
                    alert("获取错误！");
                },
                success: function (data) {
                    if (data == "ok") {
                        $("#result").text("已取消收藏");
                        $("#a").click();
                    }
                }
            });
        }
    });
    $(function () {
        
        var id = GetQueryString("id");
        //更新浏览数
        $.ajax({
            type: "POST",
            url: '../HS_Strategy/StrategyBusiness',
            data: { judge: "seventh", id: id },
            dataType: 'text',
            error: function () {
                alert("获取错误！");
            },
            success: function (data) {
                
            }
        });
        //获取详情
        $.ajax({
            type: "POST",
            url: '../HS_Strategy/StrategyBusiness',
            data: { judge: "second", id: id },
            dataType: 'text',
            error: function () {
                alert("获取错误！");
            },
            success: function (data) {
                var Arr = data;
                strategyArr = Arr.split("✶");
                $("#user").text("作者 : " + strategyArr[8]);
                $("#title").text(strategyArr[0]);
                $("#content").html(strategyArr[2])
                $("#time").text(strategyArr[4]);
                $("#show").attr("src", strategyArr[1]);
                $("#browse").text("浏览量：" + strategyArr[6] + "次");

            }
        });
        //获取用户是否收藏
        $.ajax({
            type: "POST",
            url: '../HS_Strategy/StrategyBusiness',
            data: { judge: "fiveth", id: id },
            dataType: 'text',
            error: function () {
                alert("获取错误！");
            },
            success: function (data) {
                if (data == "ok") {
                    $("#heart").attr("class", "icon-heart");
                }
                if (data == "false") {
                    $("#heart").attr("class", "icon-heart-empty");
                }
            }
        });
        //获取文章收藏数
        $.ajax({
            type: "POST",
            url: '../HS_Strategy/StrategyBusiness',
            data: { judge: "sixth", id: id },
            dataType: 'text',
            error: function () {
                alert("获取错误！");
            },
            success: function (data) {
                $("#num").text(data);
            }
        });

        
    })
